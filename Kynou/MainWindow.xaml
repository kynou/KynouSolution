<Window x:Class="Kynou.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kynou"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="Kynou"
        Height="450"
        Width="800"
        WindowStyle="None"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="5"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="CustomColorMaterialDesign3NavigationListBoxItem"
               TargetType="ListBoxItem"
               BasedOn="{StaticResource MaterialDesign3.NavigationRailListBoxItem}">
            <Setter Property="Background"
                    Value="#4A4458"/>
            <Setter Property="Foreground"
                    Value="#E8DEF8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <!-- Custom Title Bar -->
            <Border Background="{DynamicResource PrimaryHueDarkBrush}"
                    Height="40"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                <Grid>
                    <Rectangle Fill="Transparent"
                            MouseDown="TitleBar_MouseDown"/>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                        <Image Source="pack://application:,,,/Images/LOGO.ico"
                                Width="32"
                                Height="32"
                                Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtTitle"
                                Text="Kynou | Welcome!"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Background="Transparent"
                                Foreground="White"
                                ToolTip="Minimize"
                                Click="MinimizeWindow_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize"
                                    Width="24"
                                    Height="24"/>
                        </Button>
                        <Button x:Name="btnMaxRestore"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="Transparent"
                                Foreground="White"
                                ToolTip="Maximize/Restore"
                                Click="MaximizeRestoreWindow_Click">
                            <materialDesign:PackIcon x:Name="iconMaxRestore"
                                    Kind="WindowMaximize"
                                    Width="24"
                                    Height="24"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Background="Transparent"
                                Foreground="White"
                                ToolTip="Close"
                                Click="CloseWindow_Click">
                            <materialDesign:PackIcon Kind="WindowClose"
                                    Width="24"
                                    Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Navigation Rail -->
            <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Left">
                <Grid Width="80"
                        Background="#25232A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="1"
                            VerticalAlignment="Top"
                            Foreground="#E8DEF8"
                            SelectedIndex="0"
                            SelectionChanged="OnTabSelectionChanged">
                        <ListBoxItem Tag="Home">
                            <ListBoxItem.Style>
                                <Style TargetType="ListBoxItem"
                                        BasedOn="{StaticResource CustomColorMaterialDesign3NavigationListBoxItem}">
                                    <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                            Value="Home"/>
                                    <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                            Value="HomeOutline"/>
                                </Style>
                            </ListBoxItem.Style>
                            <TextBlock Text="Home"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Chats">
                            <ListBoxItem.Style>
                                <Style TargetType="ListBoxItem"
                                        BasedOn="{StaticResource CustomColorMaterialDesign3NavigationListBoxItem}">
                                    <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                            Value="Chat"/>
                                    <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                            Value="ChatOutline"/>
                                </Style>
                            </ListBoxItem.Style>
                            <TextBlock Text="Chats"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Models">
                            <ListBoxItem.Style>
                                <Style TargetType="ListBoxItem"
                                        BasedOn="{StaticResource CustomColorMaterialDesign3NavigationListBoxItem}">
                                    <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                            Value="Cube"/>
                                    <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                            Value="CubeOutline"/>
                                </Style>
                            </ListBoxItem.Style>
                            <TextBlock Text="Models"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="LocalDocs">
                            <ListBoxItem.Style>
                                <Style TargetType="ListBoxItem"
                                        BasedOn="{StaticResource CustomColorMaterialDesign3NavigationListBoxItem}">
                                    <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                            Value="Database"/>
                                    <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                            Value="DatabaseOutline"/>
                                </Style>
                            </ListBoxItem.Style>
                            <TextBlock Text="LocalDocs"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Settings">
                            <ListBoxItem.Style>
                                <Style TargetType="ListBoxItem"
                                        BasedOn="{StaticResource CustomColorMaterialDesign3NavigationListBoxItem}">
                                    <Setter Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                            Value="Cog"/>
                                    <Setter Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                            Value="CogOutline"/>
                                </Style>
                            </ListBoxItem.Style>
                            <TextBlock Text="Settings"/>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </StackPanel>

            <!-- Main Content Area Wrapped in MaterialDesign Card -->
            <Grid Margin="0,40,0,0"
                    DockPanel.Dock="Right">
                <materialDesign:Card Padding="20">
                    <ContentControl x:Name="MainContentControl"/>
                </materialDesign:Card>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
